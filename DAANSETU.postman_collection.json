{
  "info": {
    "name": "DAANSETU API",
    "description": "Complete API collection for DAANSETU platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Donor",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"donor@example.com\",\n  \"password\": \"password123\",\n  \"name\": \"John Doe\",\n  \"role\": \"donor\",\n  \"phone\": \"+1234567890\",\n  \"location\": {\n    \"lat\": 40.7128,\n    \"lng\": -74.0060,\n    \"address\": \"New York, NY\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Register NGO",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"ngo@example.com\",\n  \"password\": \"password123\",\n  \"name\": \"Hope Foundation\",\n  \"role\": \"ngo\",\n  \"phone\": \"+1234567891\",\n  \"location\": {\n    \"lat\": 40.7580,\n    \"lng\": -73.9855,\n    \"address\": \"New York, NY\"\n  },\n  \"ngoDetails\": {\n    \"registrationNumber\": \"NGO12345\",\n    \"description\": \"Helping communities in need\",\n    \"website\": \"https://hope.org\",\n    \"categories\": [\"food\", \"clothes\"],\n    \"establishedYear\": 2020\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"donor@test.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/profile",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "profile"]
            }
          }
        }
      ]
    },
    {
      "name": "Donations",
      "item": [
        {
          "name": "Get All Donations",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/donations?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["donations"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Create Donation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Fresh Vegetables\",\n  \"description\": \"Organic vegetables from local farm\",\n  \"category\": \"food\",\n  \"quantity\": 50,\n  \"unit\": \"kg\",\n  \"condition\": \"new\",\n  \"pickupLocation\": {\n    \"lat\": 40.7128,\n    \"lng\": -74.0060,\n    \"address\": \"123 Main St, New York, NY\"\n  },\n  \"priority\": \"high\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/donations",
              "host": ["{{baseUrl}}"],
              "path": ["donations"]
            }
          }
        },
        {
          "name": "Claim Donation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/donations/:id/claim",
              "host": ["{{baseUrl}}"],
              "path": ["donations", ":id", "claim"],
              "variable": [
                {
                  "key": "id",
                  "value": "donation_id_here"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "NGOs",
      "item": [
        {
          "name": "Get All NGOs",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/ngos?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["ngos"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Create Request",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"donationId\": \"donation_id_here\",\n  \"message\": \"We need this for 50 families\",\n  \"beneficiariesCount\": 50,\n  \"priority\": \"high\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/ngos/requests",
              "host": ["{{baseUrl}}"],
              "path": ["ngos", "requests"]
            }
          }
        }
      ]
    },
    {
      "name": "Notifications",
      "item": [
        {
          "name": "Get Notifications",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/notifications",
              "host": ["{{baseUrl}}"],
              "path": ["notifications"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Get Platform Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/stats",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "stats"]
            }
          }
        },
        {
          "name": "Seed Database",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/seed",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "seed"]
            }
          }
        }
      ]
    }
  ]
}

